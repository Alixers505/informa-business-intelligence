$ const { config } = out.global;

$ const type = "login";
$ const description = `Login to ${config.website("name")}`;

<marko-web-default-page-layout type=type title="Login" description=description>
  <@head>
    <marko-web-gtm-default-context|{ context }| type=type>
      <marko-web-gtm-push data=context />
    </marko-web-gtm-default-context>
  </@head>
  <@page>
    <informa-gam-adunit
      location="homepage"
      position="top_banner"
      modifiers=["top-of-page"]
    />
    <marko-web-page-wrapper modifiers=["top-border"]>
      <@section>
        <lazarus-skin-page-grid>
          <@left-col>
            <lazarus-shared-global-left-rail-block />
          </@left-col>
          <@right-col>
            <@bottom-row>
              <lazarus-skin-page-grid-col modifiers=["full", "bottom-spacer"]>
                <h1 class="page-wrapper__title">${description}</h1>
              </lazarus-skin-page-grid-col>
              <lazarus-skin-page-grid-col modifiers=["full", "bottom-spacer"]>
                <marko-web-identity-x-form-login />
              </lazarus-skin-page-grid-col>
            </@bottom-row>
          </@right-col>
        </lazarus-skin-page-grid>
      </@section>
    </marko-web-page-wrapper>
  </@page>
</marko-web-default-page-layout>
