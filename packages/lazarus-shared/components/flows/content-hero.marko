import { getAsObject } from "@base-cms/object-path";

<default-theme-hero-flow header=input.header nodes=input.nodes>
  <@hero|{ node }|>
    <lazarus-shared-content-card-node node=node ...input.card>
      <@image width=630 ...getAsObject(input, "card.image") />
      <@title modifiers=["large"] ...getAsObject(input, "card.title") />
    </lazarus-shared-content-card-node>
  </@hero>
  <@list|{ nodes }|>
    <lazarus-shared-content-list-flow
      nodes=nodes
      flush-x=true
      flush-y=true
      inner-justified=false
      ...input.list
    />
  </@list>
</default-theme-hero-flow>
